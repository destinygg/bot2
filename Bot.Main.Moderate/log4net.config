<?xml version="1.0" encoding="utf-8" ?>
<log4net>
  <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%utcdate{ABSOLUTE} [%-2thread] %-5level - %message%newline%exception" />
      <!--<conversionPattern value="%utcdate{ABSOLUTE} [%-2thread] %-5level %logger - %message%newline"/>-->
    </layout>
  </appender>
  <root>
    <level value="ALL" />
    <appender-ref ref="ConsoleAppender" />
  </root>
</log4net>
